{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "useDefineForClassFields": false,
    "lib": ["DOM", "ES2020", "ES2021", "ES2022"],
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "src",
    "declaration": false,
    "declarationMap": false
  },
  "compileOnSave": true,
  "include": ["src", "test"],
  "typedocOptions": {
    "out": "./docs/",
    "theme": "default",
    "name": "ProtoObject",
    "includeVersion": true,
    "hideGenerator": true
  }
}
